<Window x:Class="travel_agency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:travel_agency"
        mc:Ignorable="d"
        MinHeight="450" MinWidth="800" 
        Title="Travel Agency" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30
                           "/>
        </Grid.RowDefinitions>

        <Image Source="Resources/logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Путешествуй по России" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" Foreground="#FF445C93"></TextBlock>
        <Grid Background=" #bae3e8" Panel.ZIndex="-2"></Grid>
        <Grid Grid.Row="2" Background=" #445c93"></Grid>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MG_Contentrendered" Grid.Row="1" Name="MainFrame"></Frame>
        <Button Content="Назад" Name="BtnBack" HorizontalAlignment="Right" Margin="5" Click="btnbackClik"></Button>
        
    </Grid>
</Window>
